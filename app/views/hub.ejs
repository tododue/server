<%

%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">

    <title>To-Do/Due</title>

    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="./assets/img/favicon.png" sizes="16x16" type="image/png">

    <link href="./assets/css/normalize.css" rel="stylesheet">
    <link href="./assets/css/notyf.min.css" rel="stylesheet">
    <link href="./assets/css/micromodal.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=PT+Serif:ital,wght@0,400;0,700;1,400;1,700&family=Rubik:ital,wght@0,300;0,500;0,700;1,500&display=swap" rel="stylesheet">
    <link href="./assets/css/utilities.min.css" rel="stylesheet">
    <link href="./assets/css/style.css" rel="stylesheet">
    <link href="./assets/css/hub.css" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
</head>
<body>
    <header class="hub">
        <a href="#" class="nav-brand pl-4 pr-0 px-4-lg pt-3 text-light"><img src="./assets/img/logo.png" class="hub-logo"></a>
        <nav class="navbar m-0 px-1 py-4">
            <ul class="navbar m-0 pr-3 text-center">
                <li class="nav-link"><a href="#hub" class="data-link" data-link="hub">hub</a></li>
                <li class="nav-link"><a href="#assignments-list" class="data-link" data-link="assignments-list">assignment list</a></li>
                <li class="nav-link"><a href="#courses" class="data-link" data-link="courses">grouped view</a></li>
                <li class="nav-link"><a href="#profile" class="data-link" data-link="profile">profile</a></li>
                <li class="nav-link"><a href="#logout" class="data-link" data-link="logout">logout</a></li>
            </ul>
        </nav>
    </header>
    <main class="mx-5 my-4">
        <div id="hub" class="section container-fluid">
            <div class="row">
                <h1 class="pl-2">DUE SOON</h1>
                <hr>
                <div class="floating-buttons">
                    <button class="floating-button add-button" title="Add Custom Assignment" data-micromodal-trigger="add-assignment-modal">
                        <img src="./assets/img/plus.png">
                    </button>
                </div>
            </div>
        </div>
        <div id="assignments-list" class="section container-fluid">
            <div class="row">
                <h1 class="pl-2">AT A GLANCE - ASSIGNMENTS</h1>
                <hr>
                <div class="floating-buttons">
                    <button class="floating-button add-button" title="Add Custom Assignment" data-micromodal-trigger="add-assignment-modal">
                        <img src="./assets/img/plus.png">
                    </button>
                </div>
            </div>
        </div>
        <div id="courses" class="section container-fluid">
            <div class="row">
                <h1 class="pl-2">AT A GLANCE - COURSES</h1>
                <hr>
                <div class="floating-buttons">
                    <button class="floating-button three-dots">
                        <img src="./assets/img/three-dots.png">
                    </button>
                    <button class="floating-button add-button" title="Add Custom Assignment" data-micromodal-trigger="add-assignment-modal">
                        <img src="./assets/img/plus.png">
                    </button>
                </div>
            </div>
        </div>
        <div id="profile" class="section container-fluid">
            <div class="row">
                <h1 class="pl-2">YOU<%= (isAdmin) ? ' (ADMIN)' : '' %></h1>
                <hr>
                <div class="container my-5">
                    <div class="form">
                        <div class="col-4-md">Username - <span id="profile_name"></span></div>
                        <div class="col-4-md">Email - <span id="profile_email"></span></div>
                        <div class="col-4-md"><button class="btn-password-reset" data-micromodal-trigger="reset-password-modal">Reset Password</button></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid py-5">
            <div class="row mb-5">
                <div id="assignments">
                    <!-- load assignments into here -->
                </div>
            </div>
        </div>
    </main>
    <footer>
        <div class="container-fluid bg-dark">
            <div class="row">
                <div class="col-6-sm"><p class="text-light">Made for <a href="https://brickhack.io/" class="text-theme text-underline" target="_blank">BrickHack 7</a></p></div>
                <div class="col-6-sm"><p class="text-light text-right">Made by <a href="https://patrickm.xyz/" class="text-theme text-underline" target="_blank">Pat</a>, <a href="https://www.linkedin.com/in/christopher-grabda/" class="text-theme text-underline" target="_blank">Chris</a>, and <a href="https://zachkroesen.com/" class="text-theme text-underline" target="_blank">Zach</a></p></div>
            </div>
        </div>
    </footer>

    <div id="reset-password-modal" class="modal micromodal-slide" aria-hidden="true">
        <div class="modal__overlay" tab-index="-1" data-micromodal-close>
            <div class="modal__container" role="dialog" aria-modal="true" aria-labelledby="login-modal-title">
                <header class="modal__header">
                    <h2 id="reset-password-title" class="modal__title">Reset Password</h2>
                    <button class="modal__close" aria-label="Close modal" data-micromodal-close></button>
                </header>
                <main id="reset-password-modal-content" class="modal__content">
                    <div id="form">
                        <div>
                            <input id="password" type="password"><label for="username">Password<super class="text-red">*</super></label><span class="focus-border"></span>
                        </div>
                        <div>
                            <input id="password_validate" type="password"><label for="username">Password (again)<super class="text-red">*</super></label><span class="focus-border"></span>
                        </div>
                    </div>
                </main>
                <footer class="modal__footer">
                    <button id="reset_password_btn" class="modal__btn modal__btn-primary submit" role="submit">Update Password</button>
                    <button id="reset_password_close" class="modal__btn" data-micromodal-close>Close</button>
                </footer>
            </div>
        </div>
    </div>

    <div id="settings-modal" class="modal micromodal-slide" aria-hidden="true">
        <div class="modal__overlay" tab-index="-1" data-micromodal-close>
            <div class="modal__container" role="dialog" aria-modal="true" aria-labelledby="login-modal-title">
                <header class="modal__header">
                    <h2 id="settings-title" class="modal__title">Hide Course / Assignment</h2>
                    <button class="modal__close" aria-label="Close modal" data-micromodal-close></button>
                </header>
                <main id="settings-modal-content" class="modal__content">
                    <div id="form">
                        <div>

                        </div>
                        <div>
                            <input id="class" type="text"><label for="username">Class Name<super class="text-red">*</super></label><span class="focus-border"></span>
                        </div>
                        <div class="mt-2">
                            <input id="due" type="datetime-local"><label class="datetime" for="username">Due Time / Close Time</label><span class="focus-border"></span>
                            <input id="close" type="datetime-local"><span class="focus-border"></span>
                        </div>
                        <div class="mt-2">
                            <textarea id="note"></textarea>
                        </div>
                    </div>
                </main>
                <footer class="modal__footer">
                    <button id="edit_assignment_btn" class="modal__btn modal__btn-primary submit" role="submit">Save Assignment</button>
                    <button id="edit_assignment_close" class="modal__btn" data-micromodal-close>Close</button>
                </footer>
            </div>
        </div>
    </div>

    <div id="edit-assignment-modal" class="modal micromodal-slide" aria-hidden="true">
        <div class="modal__overlay" tab-index="-1" data-micromodal-close>
            <div class="modal__container" role="dialog" aria-modal="true" aria-labelledby="login-modal-title">
                <header class="modal__header">
                    <h2 id="edit-assignment-title" class="modal__title">Edit Assignment</h2>
                    <button class="modal__close" aria-label="Close modal" data-micromodal-close></button>
                </header>
                <main id="edit-assignment-modal-content" class="modal__content">
                    <div id="form">
                        <input id="assignment_id" type="hidden" value="">
                        <div>
                            <input id="name" type="text"><label for="username">Assignment Name<super class="text-red">*</super></label><span class="focus-border"></span>
                        </div>
                        <div>
                            <input id="class" type="text"><label for="username">Class Name<super class="text-red">*</super></label><span class="focus-border"></span>
                        </div>
                        <div class="mt-2">
                            <input id="due" type="datetime-local"><label class="datetime" for="username">Due Time / Close Time</label><span class="focus-border"></span>
                            <input id="close" type="datetime-local"><span class="focus-border"></span>
                        </div>
                        <div class="mt-2">
                            <textarea id="note"></textarea>
                        </div>
                    </div>
                </main>
                <footer class="modal__footer">
                    <button id="edit_assignment_btn" class="modal__btn modal__btn-primary submit" role="submit">Save Assignment</button>
                    <button id="edit_assignment_close" class="modal__btn" data-micromodal-close>Close</button>
                </footer>
            </div>
        </div>
    </div>

    <div id="add-assignment-modal" class="modal micromodal-slide" aria-hidden="true">
        <div class="modal__overlay" tab-index="-1" data-micromodal-close>
            <div class="modal__container" role="dialog" aria-modal="true" aria-labelledby="login-modal-title">
                <header class="modal__header">
                    <h2 id="add-assignment-modal-title" class="modal__title">Custom Assignment</h2>
                    <button class="modal__close" aria-label="Close modal" data-micromodal-close></button>
                </header>
                <main id="add-assignment-modal-content" class="modal__content">
                    <div id="form">
                        <div>
                            <input id="name" type="text"><label for="username">Assignment Name<super class="text-red">*</super></label><span class="focus-border"></span>
                        </div>
                        <div>
                            <input id="class" type="text"><label for="username">Class Name<super class="text-red">*</super></label><span class="focus-border"></span>
                        </div>
                        <div class="mt-2">
                            <input id="due" type="datetime-local"><label class="datetime" for="username">Due Time / Close Time</label><span class="focus-border"></span>
                            <input id="close" type="datetime-local"><span class="focus-border"></span>
                        </div>
                    </div>
                </main>
                <footer class="modal__footer">
                    <button id="add_assignment_btn" class="modal__btn modal__btn-primary submit" role="submit">Add Assignment</button>
                    <button id="add_assignment_close" class="modal__btn" data-micromodal-close>Close</button>
                </footer>
            </div>
        </div>
    </div>

    <script src="./assets/js/micromodal.min.js"></script>
    <script src="./assets/js/notyf.min.js"></script>
    <script src="assets/js/home.js"></script>
    <script src="assets/js/hub.js"></script>
</body>
</html>
